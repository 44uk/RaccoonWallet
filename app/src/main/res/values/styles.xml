<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/nemGreen</item>
        <item name="colorControlNormal">@color/nemGreen</item>
        <item name="colorControlActivated">@color/nemGreen</item>
        <item name="colorSwitchThumbNormal">#E0E0E0</item>
    </style>

    <style name="OssLicenceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/nemGreen</item>
        <item name="colorPrimaryDark">@color/nemGreen</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleWrapper</item>
    </style>

    <style name="BottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">312dp</item>
    </style>

    <style name="ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">@android:color/white</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="android:elevation">3dp</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/nemGreen</item>
    </style>

    <style name="WhiteCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>
</resources>
