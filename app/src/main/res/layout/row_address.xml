<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="wacode.yamada.yuki.nempaymentapp.viewmodel.AddressRowViewModel"/>

        <variable
            name="handlers"
            type="wacode.yamada.yuki.nempaymentapp.viewmodel.AddressRowEventHandler"/>

        <variable
            name="longHandlers"
            type="wacode.yamada.yuki.nempaymentapp.viewmodel.AddressRowLongEventHandlers"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:longClickable="true"
            android:onClick="@{(theView) -> handlers.onAddressClick(theView, viewModel)}"
            android:onLongClick="@{(theView) -> longHandlers.onAddressLongClick(theView, viewModel)}"
            android:orientation="vertical"
            android:paddingBottom="14dp"
            android:paddingLeft="10dp"
            android:paddingTop="14dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.name()}"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:text="YamadaYuki"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.address()}"
                android:textSize="12sp"
                tools:text="XIEJEWUEHRY2U231JS9KA1AKJSHDF1FJSKFJ2JFK34SJ"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
</layout>
