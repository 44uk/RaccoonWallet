<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/emptyRootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/emptyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/image_empty2_large"
            app:layout_constraintBottom_toBottomOf="@id/emptyRootView"
            app:layout_constraintLeft_toLeftOf="@id/emptyRootView"
            app:layout_constraintRight_toRightOf="@id/emptyRootView"
            app:layout_constraintTop_toTopOf="@id/emptyRootView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/create_friend_wallet_empty_title"
            android:textColor="@color/hintGray"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/emptyRootView"
            app:layout_constraintRight_toRightOf="@id/emptyRootView"
            app:layout_constraintTop_toBottomOf="@id/emptyImage" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>