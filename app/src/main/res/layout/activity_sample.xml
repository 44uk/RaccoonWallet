<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <wacode.yamada.yuki.nempaymentapp.view.custom_view.RaccoonSingleMaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/single"
        app:layout_constraintRight_toRightOf="parent"
        app:src="@mipmap/icon_message_encryption"
        app:text="芸術" />

    <wacode.yamada.yuki.nempaymentapp.view.custom_view.RaccoonDoubleMaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftSrc="@mipmap/icon_message_encryption"
        app:layout_constraintTop_toBottomOf="@id/single"
        app:leftText="モンスーン"
        app:rightSrc="@mipmap/icon_wallet"
        app:rightText="ゴリラ" />
</android.support.constraint.ConstraintLayout>
